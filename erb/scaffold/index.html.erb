<h1><%%= t('helpers.headers.listing', model: <%= class_name %>.model_name.human(count:2)) %></h1>
<br />
<table class="table table-striped">
  <tr>
    <%- attributes.each do |attribute| -%>
    <th><%%= t('activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>') %></th>
    <%- end -%>
    <th></th>
  </tr>

  <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
    <%- attributes.each do |attribute| -%>
    <td><%%= t('activerecord.attributes.<%= singular_table_name %>.<%= attribute.name %>') %></td>
    <%- end -%>
    <td>
      <div class="btn-group">
        <%%= link_to t("helpers.actions.show"), <%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-mini" %>
        <%%= link_to t("helpers.actions.edit"), edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "btn btn-mini" %>
        <%%= link_to t("helpers.actions.destroy"), <%= singular_table_name %>_path(<%= singular_table_name %>), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %>
      </div><!-- .btn-group -->
    </td>
  </tr>
  <%% end %>
</table>

<br />

